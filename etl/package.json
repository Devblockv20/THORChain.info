{
  "name": "thorchain.info-api",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/elasticsearch": "^5.0.26",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.3",
    "@types/node-fetch": "^2.1.2",
    "@types/winston": "^2.4.4",
    "jest": "^23.5.0",
    "npm-run-all": "^4.1.3",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tsc": "^1.20150623.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "elasticsearch": "^15.1.1",
    "forever": "^0.15.3",
    "node-fetch": "^2.2.0",
    "winston": "^3.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node ./src/index.ts",
    "debug": "npm-run-all build debug-build",
    "debug-build": "node --trace-warnings --inspect ./build/index.js",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
